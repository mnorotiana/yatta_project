<div class="container-fluid">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3>Creer nouveau formulaire</h3></div>
        <div class="panel-body">
            <div class="panel panel-success">
              <div class="panel-heading"><h5 class="panel-title">Information concernant le formulaire</h5></div>
              <div class="panel-body">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <label class="sr-only" for="titre">Titre du formulaire</label>
                      <input type="text" class="form-control input-lg" id="titre" name="titre" placeholder="Titre du formulaire">
                    </div>
                  </div>
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <label class="" for="noteMaximum">Note maximum</label>
                      <input type="number" class="text-center" id="noteMaximum" name="noteMaximum" value="5">
                    </div>
                  </div>
              </div>
            </div>
            <div class="panel panel-success">
              <div class="panel-heading"><h5 class="panel-title">Utilisateurs concernés</h5></div>
              <div class="panel-body">

                <div class="form-inline">
                  <div class="form-group">

                    <input type="button" value="Tous le monde" id="ajouterTousLeMonde" class="btn btn-danger">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" id="inputMatricule" name="inputMatricule" placeholder="Matricule à ajouter">
                  </div>
                  <div class="form-group">
                    <label class="sr-only" for="departement">Departement</label>
                    <select class="form-control" id="departement" name="departement">
                      <%
                      if(departement != undefined){
                        for(var id in departement){ %>
                      <option value='<%= departement[id].id_departement %>'><%= departement[id].libelle %></option>
                      <%}
                      }
                      %>
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="button" value="Ajouter departement" id="ajouterWithDepartement" class="btn btn-success">
                  </div>
              </div>

              <div class="row">
                <div class="col-md-12 col-sm-12">
                  <select multiple class="form-control" id="concernes" name="concernes" size="15">
                  </select>
                </div>
              </div>
            </div>
            </div>
          <div class="pull-right">
            <input type="button" value="Créer formulaire" id="creerFormulaire" class="btn btn-primary btn-lg">
          </div>
        </div>
    </div>
</div>

